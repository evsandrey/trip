<div class="page-header">
  <%= link_to new_trophy_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Trophy
  <% end %>
  <h1>Listing trophies</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Fish</th>
            <th>Trip</th>
            <th>Weight</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @trophies) do |trophy| %>
            <td><%= trophy.fish_id %></td>
            <td><%= trophy.trip_id %></td>
            <td><%= trophy.weight %></td>
            <td><%= link_to 'Show', trophy %></td>
        <td><%= link_to 'Edit', edit_trophy_path(trophy) %></td>
        <td><%= link_to 'Destroy', trophy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
