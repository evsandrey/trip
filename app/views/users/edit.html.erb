<%= form_for(@user, html: { class: "form-horizontal", role: "form" }) do |f| %>
<div class="container" style="padding-top: 60px;">
  <h1 class="page-header">Редактирование:</h1>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <% if !@user.avatar.nil? %>
          <%= image_tag @user.avatar.url(:med), :class => 'img-rounded avatar-profile' %>
        <% else %>

        <% end %>        
        
        <%= f.file_field :avatar %>
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <h3>Персональные данные:</h3>
      
        <div class="row">
          <label class="col-lg-3 control-label">Ник:</label>
          <div class="col-lg-8">
            <%= f.text_field :nickname, :class => 'form-control', :placeholder => @user.nickname  %>
          </div>
        </div>
        <div class="row">
          <label class="col-lg-3 control-label">Имя:</label>
          <div class="col-lg-8">
            <%= f.text_field :name, :class => 'form-control', :placeholder => @user.name  %>
          </div>
        </div>
        <div class="row">
          <label class="col-lg-3 control-label">Фамилия:</label>
          <div class="col-lg-8">
            <%= f.text_field :surname, :class => 'form-control', :placeholder => @user.surname  %>
          </div>
        </div>
        <div class="row">
          <label class="col-lg-3 control-label">Адрес:</label>
          <div class="col-lg-8">
            
          </div>
        </div>
        <div class="row">
          <label class="col-lg-3 control-label">Страна:</label>
          <div class="col-lg-8">
                 </div>
        </div>
        
        <div class="row">
          <label class="col-lg-3 control-label"><%= f.label :email %></label>
          <div class="col-lg-8">
            <%= f.email_field :email, autocomplete: "off", :class => 'form-control',:readonly=> "true",:placeholder => @user.email %>
            
          </div>
        </div>
        <div class="row">
          <label class="col-lg-3 control-label">Роль:</label>
          <div class="col-lg-8">
            
            <%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}, {:class => 'form-control'}) %>
          </div>
        </div>
        <div class="row">
          <label class="col-lg-3 control-label">Пароль:</label>
          <div class="col-lg-8">
            <%= f.password_field :current_password, autocomplete: "off" , :class => 'form-control'%>
          </div>
        </div>
        
        <div class="row">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
            <span></span>
            <input class="btn btn-default" value="Отменить" type="reset">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<% end %>

<h3>Удалить аккаунт</h3>

<p>Чего-то не нравится? <%= button_to "Удалить аккаунт", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></p>
