<div class="page-header">
  <%= link_to articles_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_article_path(@article), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1></h1>
</div>
<div class="container">
  <div class="row">
    <div class="row">
      <h2><%= @article.name %></h2>
    </div>
    <div class="row fblock">
      <%= raw(@article.text)%>
    </div>
  </div>
  <div class="row">
    <%= small_user_badge(@article.user) %>
  </div>
  <div class="row">
  <%= commontator_thread(@article) %>
  </div>
  
</div>

