<div class="page-header">
  <%= link_to new_bait_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Добавить приманку
  <% end %>
  <h1>Приманки</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
            <th>Название</th>
            <th>Описание</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @baits) do |bait| %>
            <td><%= image_tag bait.photo.url(:med) %></td>
            <td><%= bait.name %></td>
            <td><%= bait.description %></td>
            
      <% end %>
    </tbody>
  </table>
</div>
