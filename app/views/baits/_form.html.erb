<%= form_for(@bait, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @bait.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@bait.errors.count, "error") %> prohibited this bait from being saved:</h4>

      <ul>
      <% @bait.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Фото', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.file_field :photo %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Производитель', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.select :manufacturer_id, Manufacturer.all.collect {|c| [ c.name, c.id ] } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Тип', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.collection_select(:btype, Bait::TYPES, :to_s, lambda{|i| i.to_s.humanize}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Вес, г', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.number_field :weight %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Размер, мм', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.number_field :size %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Заглубление, м', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.number_field :depth %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Номер', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.number_field :number %>
    </div>
  </div>

  
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
