<div class="page-header">
  <%= link_to new_trip_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Trip
  <% end %>
  <h1>Listing trips</h1>
</div>


<% @trips.each_slice(4) do |trips| %>
        <div class="row">
        <ul class="thumbnails list-unstyled">       
            <% trips.each do |trip| %>
              <li class="col-md-3">
                <div class="thumbnail" style="padding: 0">
                  <div style="padding:4px">
                      <%= link_to image_tag(trip.cover.url(:med),class: "img-thumbnail", height: "150", width: "150", style: "width: 100%"),trip %>
                  </div>
                  <div class="caption">
                      <h2><%= link_to trip.name, trip %></h2>
                      <% if !trip.place.nil? %>
                        <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= link_to trip.place.name, trip.place %></p>
                      <%else%>
                        <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></i> Место не выбрано </p>
                      <% end %>
                  </div>
                  <div class="modal-footer" style="text-align: left">
                  <div class="row">
                    <div class="col-md-4"><b><%= trip.users.count+1 %></b><br/><small>Участников</small></div>
                    <div class="col-md-4"><b>400</b><br/><small>Чего-то?</small></div>
                    <% if !trip.sdate.nil? & !trip.edate.nil? %>
                    <% beginDate = Date.strptime(trip.sdate,"%m/%d/%Y") %>
                    <% endDate = Date.strptime(trip.edate,"%m/%d/%Y") %>
                    <div class="col-md-4"><b><%= (endDate-beginDate).to_i %></b><br/><small>Дней</small></div>
                    <% else %>
                    <div class="col-md-4"><b>?</b><br/><small>Дней</small></div>
                    <% end %>
                  
                </div>  
              </li>
            <% end %>
        </ul>  
        </div>
                    
    
<% end %>





